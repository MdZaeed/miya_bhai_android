<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rad.iit.com.baya">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait">

        <activity android:name=".activities.ChallengeMamuNewLayout"
            android:configChanges="locale"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.SignUpActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale"/>

        <activity android:name=".activities.HomePageActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale"/>

        <activity android:name=".activities.VideoChallengeListActivity"
            android:configChanges="locale"
            android:screenOrientation="portrait"/>

        <activity android:name=".activities.VideoChallengeActivity"
            android:configChanges="locale"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.LoginActivity"
            android:configChanges="locale"
            android:screenOrientation="portrait"/>

        <activity android:name=".activities.ComposeQuestionActivity"
            android:theme="@style/AppTheme.NoActionBarNTitle"
            android:configChanges="locale"
            android:screenOrientation="portrait"/>

        <activity android:name=".activities.SettingsActivity"
            android:configChanges="locale"
            android:screenOrientation="portrait"/>

        <activity android:name=".activities.ChallengeMamuQuestionActivity"
            android:theme="@style/AppTheme.NoActionBarNTitle"
            android:screenOrientation="portrait"/>

        <activity android:name=".activities.ChallengeMamuQuestionAnswerActivity"
            android:theme="@style/AppTheme.NoActionBarNTitle"
            android:screenOrientation="portrait"/>

        <activity android:name=".activities.ChallengeMamuComposeChallengeActivity"
            android:theme="@style/AppTheme.NoActionBarNTitle"
            android:screenOrientation="portrait"/>

        <activity android:name=".activities.ExpertMamuQuestionActivity"
            android:theme="@style/AppTheme.NoActionBarNTitle"
            android:screenOrientation="portrait"/>

        <activity android:name=".activities.ExpertAnswerActivity"
            android:theme="@style/AppTheme.NoActionBarNTitle"
            android:screenOrientation="portrait"/>

        <activity android:name=".activities.ExpertMamuComposeQuestionActivity"
            android:configChanges="locale"
            android:screenOrientation="portrait"/>

        <activity android:name=".activities.SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.chat.ChatActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>


    </application>

</manifest>
